{
  "name": "aaconnect",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**/*",
      "submodules/bundler/packages/bundler"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier '**/*.{json,md}' --ignore-path .gitignore --write",
    "dev": "run-p dev:*",
    "dev:app": "yarn workspace @aaconnect/app dev",
    "dev:bundler": "yarn workspace @account-abstraction/bundler hardhat-compile && run-p dev:bundler:*",
    "dev:bundler:goerli": "yarn workspace @account-abstraction/bundler bundler --port 3001 --network goerli --mnemonic ../../../../mnemonic.txt --entryPoint 0xfad031b3dbd8048d6f84ae16831d9e27430fe555",
    "build": "run-p build:*",
    "build:app": "yarn workspace @aaconnect/app build"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "wait-on": "^6.0.1"
  },
  "lint-staged": {
    "*.{md,json}": "prettier --write",
    "*.{ts,tsx,js,jsx}": "eslint --cache --fix"
  }
}
